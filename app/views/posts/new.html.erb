<h1> Novy post</h1>
<%= form_for :post,  url: posts_path do |f| %>
  <p>
    <%= f.label :post_title %><br>
    <%= f.text_field :post_title %>
  </p>
  <p>
    <%= f.label :post_author %><br>
    <%= f.text_field :post_author %>
  </p>
   <p>
    <%= f.label :post_tag %><br>
    <%= f.text_field :post_tag %>
  </p>
  <p>
    <%= f.label :post_body %><br>
    <%= f.text_area :post_body %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
<% end %>